<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionTableFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:id="@+id/back"
            android:layout_marginLeft="13dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_chevron_left_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </View>

        <TextView
            android:id="@+id/modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lotte_mart_dream_bold"
            android:text="수정"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="29dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout"
        app:singleSelection="true"
        app:checkedButton="@+id/sell"
        >

        <ToggleButton
            android:id="@+id/btn_sell"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/lotte_mart_dream_bold"
            android:textOn="매출"
            android:textOff="매출"
            android:textColor="@drawable/btn_color_selector"
            android:textAlignment="center"
            android:background="@drawable/btn_selector"
            >

        </ToggleButton>

        <ToggleButton
            android:layout_marginLeft="50dp"
            android:id="@+id/btn_stock"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/lotte_mart_dream_bold"
            android:textOn="매입"
            android:textOff="매입"
            android:textColor="@drawable/btn_color_selector"
            android:textAlignment="center"
            android:background="@drawable/btn_selector"
            >

        </ToggleButton>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        app:layout_constraintTop_toBottomOf="@id/buttonPanel"
        >

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:fontFamily="@font/lotte_mart_dream_bold"
            android:background="@drawable/rect_sellmode"
            android:text="날짜"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="center"
            >

        </TextView>

        <TextView
            android:id="@+id/batName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:fontFamily="@font/lotte_mart_dream_bold"
            android:background="@drawable/rect_sellmode"
            android:text="배터리명"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="center"
            >

        </TextView>

        <TextView
            android:id="@+id/selling_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.28"
            android:fontFamily="@font/lotte_mart_dream_bold"
            android:background="@drawable/rect_managemode"
            android:text="판매가"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="center"
            >

        </TextView>

        <TextView
            android:id="@+id/is_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.17"
            android:fontFamily="@font/lotte_mart_dream_bold"
            android:background="@drawable/rect_sellmode"
            android:text="결제\n수단"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="center"
            >

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/topPanel2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        app:layout_constraintTop_toBottomOf="@id/topPanel"
        >

        <TextView
            android:id="@+id/carNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:fontFamily="@font/lotte_mart_dream_bold"
            android:background="@drawable/rect_sellmode"
            android:text="차량번호"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="center"
            >

        </TextView>

        <TextView
            android:id="@+id/carCategory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:fontFamily="@font/lotte_mart_dream_bold"
            android:background="@drawable/rect_sellmode"
            android:text="차종"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="center"
            >

        </TextView>

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:fontFamily="@font/lotte_mart_dream_bold"
            android:background="@drawable/rect_managemode"
            android:text="전화번호"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="center"
            >

        </TextView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="34dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topPanel2" />

</androidx.constraintlayout.widget.ConstraintLayout>